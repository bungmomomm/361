{

	"presets": [
		"es2015",
		"react",
		"es2015-ie"
	],
	
	"plugins": [
		"transform-object-rest-spread",
		"add-module-exports",
		"transform-decorators-legacy"
	],
	"env": {
		"production": { //only applies when NODE_ENV is set to 'production' 
			"plugins": [
				"react-transform"
			],
			"extra": {
				"react-transform": {
					"transforms": [{
						"transform" : "react-transform-sentry",
						"imports" : ["react"]
					}]
				}
			}
		}
	}
}